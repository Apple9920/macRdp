[ $OHMYZSH ] && exit

echo "Install OhMyZsh"
curl -L http://install.ohmyz.sh | sh

echo "Setting up Zsh plugins..."
ZSH_PLUGINS=~/.oh-my-zsh/custom/plugins/
git clone git://github.com/zsh-users/zsh-syntax-highlighting.git $ZSH_PLUGINS

echo "Fix audit stuff"
echo ZSH_DISABLE_COMPFIX=true

echo "set the test variable"
echo 'export OHMYZSH=true' >> ~/.zshrc
